                    <Button x:Name="MenuPrev_Button" Margin="1050,629,20,20" Width="50" Height="50" Background="Black" Style="{StaticResource GlassButton}" Click="PreviousTab_Button_Click">
                        <Image Width="18" Height="18" Source="Pictures\rw.png"/>
                    </Button>
                    <Button x:Name="MenuNext_Button" Margin="1164,629,20,20" Width="50" Height="50" Background="Black" Style="{StaticResource GlassButton}" Click="NextTab_Button_Click">
                        <Image Width="18" Height="18" Source="Pictures\ff.png"/>
                    </Button>
                    <MediaElement Name="meMain" HorizontalAlignment="Left" Height="580" Margin="248,22,0,0" VerticalAlignment="Top" Width="774" Source="MI_Robotyka.wmv" LoadedBehavior="Play"/>

                </Grid>
            </TabItem>

            <TabItem x:Name="Tab2" Header="Wejścia / wyjścia" FontFamily="Segoe UI Light">
